/*
 |--------------------------------------------------------------------------
 |  Headings
 |--------------------------------------------------------------------------
 */

h1, h2, h3, h4, h5, h6 {
  @apply font-sans text-gray-100;
}

h1 {
  @apply md:text-6xl text-7xl md:font-medium;
  line-height: 1.1
}

h2 {
  @apply text-2xl;
}

h3 {
  @apply text-xl;
}

h4 {
  @apply text-lg;
}

h5 {
  @apply text-base;
}

h6 {
  @apply text-base;
}
